<Window x:Class="ToDoListWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="328" Width="507">
    <Grid>
        <TextBox x:Name="TaskInput" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" />
        <Button Content="Add Task" HorizontalAlignment="Left" Margin="420,10,0,0" VerticalAlignment="Top" Width="75" Click="AddTask_Click" />
        <ListBox x:Name="TaskList" HorizontalAlignment="Left" Height="260" Margin="10,40,0,0" VerticalAlignment="Top" Width="485"/>
    </Grid>
</Window>
